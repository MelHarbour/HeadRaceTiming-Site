@model HeadRaceTimingSite.Models.Crew
@{
    ViewData["Title"] = Model.Name;
}

<div class="bodyDetails">
    <paper-card heading="Crew Details" @if (!String.IsNullOrEmpty(Model.ClubCode)) {
        <text>image = "http://www.britishrowing.org/sites/all/themes/britishrowing/images/blades/</text>@Model.ClubCode.ToLower()<text>.gif"</text>
        }>
        <div class="card-content">
            Start Number: @Model.StartNumber
            <table>
                <thead>
                    <tr><th>Seat</th><th>Name</th></tr>
                </thead>
                <tbody>
                    @foreach (var athlete in Model.Athletes.OrderBy(x => x.Position))
                    {
                        <tr><td>@athlete.PositionDescription</td><td>@athlete.Athlete.FirstName @athlete.Athlete.LastName</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </paper-card>
    
    <paper-card heading="Section Times">
        <div class="card-content">
            <crew-results-list crew-id="@Model.CrewId"></crew-results-list>
        </div>
    </paper-card>
</div>