@model HeadRaceTimingSite.Models.Crew
@{
    ViewData["Title"] = Model.Name;
    ViewData["TitleColor"] = Model.Competition.BackgroundHtmlColor;
}

@section imports {
    <link rel="import" href="~/components/crew-results-list.html" />
}

<div class="bodyDetails">
    <paper-card class="card-table" heading="Crew Details" @if (!String.IsNullOrEmpty(Model.ClubCode)) { <text> image="http://www.britishrowing.org/sites/all/themes/britishrowing/images/blades/</text>@Model.ClubCode.ToLower()<text>.gif" </text>  }>
        <div class="card-content">
            <div style="margin-left: 24px">Start Number: @Model.StartNumber</div>
            <table>
                <thead>
                    <tr><th>Seat</th><th>Name</th></tr>
                </thead>
                <tbody>
                    @foreach (var athlete in Model.Athletes.OrderBy(x => x.Position))
                    {
                        <tr><td>@athlete.PositionDescription</td><td>@athlete.Athlete.FirstName @athlete.Athlete.LastName</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </paper-card>

    <paper-card class="card-table" heading="Section Times">
        <div class="card-content">
            <crew-results-list crew-id="@Model.CrewId"></crew-results-list>
        </div>
    </paper-card>
</div>

@section titleStyle{
    <style>
        app-header {
            background-color: #@ViewData["TitleColor"];
            color: #fff;
        }
    </style>
}